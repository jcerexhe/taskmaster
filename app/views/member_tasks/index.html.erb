<p id="notice"><%= notice %></p>

<h1>Member Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Task</th>
      <th>Task type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_tasks.each do |member_task| %>
      <tr>
        <td><%= member_task.member %></td>
        <td><%= member_task.task %></td>
        <td><%= member_task.task_type %></td>
        <td><%= link_to 'Show', member_task %></td>
        <td><%= link_to 'Edit', edit_member_task_path(member_task) %></td>
        <td><%= link_to 'Destroy', member_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

